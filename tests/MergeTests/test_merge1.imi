
var     x,y : clock;

	
-- -----------------------------------------------



--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton merge1
--****************************************************--
synclabs: a,b,c;

loc l0: while y<=1 wait {}
	when y=1 sync a goto l1; 
        when True sync b do {y'=0} goto l2;

loc l1: while y<=2 wait {}
	when True sync c do {y'=0} goto l2;

loc l2: while x>=0 & y<=1 wait {}

end



(************************************************************)
(* Initial state *)
(************************************************************)
init :=   loc[merge1]=l0
	& x=0 & y=0
	;

(************************************************************)
(* Property specification *)
(************************************************************)
property := unreachable loc[merge1]=l1;
