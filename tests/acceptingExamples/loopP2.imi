--
--   Example from Jaco
--************************************************************--
--************************************************************--


var 	x, y
		: clock;
	p
		: parameter;


--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton aa
--****************************************************--
synclabs: ;

accepting loc l1: while x < p wait {}
	when 1 < y do {y' = 0} goto l1;

end -- aa



--****************************************************--
--****************************************************--
-- ANALYSIS
--****************************************************--
--****************************************************--

var init
	: region;

init :=
	----------------------
	-- Initial locations
	----------------------
	  loc[aa] = l1

	----------------------
	-- Clocks
	----------------------
	& x = 0
	& y = 0
	
	----------------------
	-- parameters
	----------------------
	& 0 <= p
;

end