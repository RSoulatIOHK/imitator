var 	x, y
		: clock;
	p
		: parameter;


--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton aa
--****************************************************--
synclabs: ;

accepting loc l1: while x <= 1 & y <= p wait {}
	when 1 <= x do {x' = 0} goto l1;
	when True goto l2;

loc l2: while True wait {}

end -- aa



--****************************************************--
--****************************************************--
-- ANALYSIS
--****************************************************--
--****************************************************--

var init
	: region;

init :=
	----------------------
	-- Initial locations
	----------------------
	  loc[aa] = l1

	----------------------
	-- Clocks
	----------------------
	& x = 0
	& y = 0
	
	----------------------
	-- parameters
	----------------------
	& 0 <= p & p <= 10
;

end