var

(* Clocks *)
	x,
 	global_time,
		: clock;


(************************************************************)
  automaton pta
(************************************************************)
synclabs: ;

loc l1: invariant x <= 2
	when x = 2 do { x := x} goto l2;

loc l2: invariant x <= 3
	when x = 3 do { x := 0} goto l3;

loc l3: invariant x <= 1
	when x = 1 do { x := 50} goto l4;

loc l4: invariant x >=50 & x <= 99
	when x = 99 do { x := 0} goto l2;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init := {
	
    discrete =
		(*------------------------------------------------------------*)
		(* Initial location *)
		(*------------------------------------------------------------*)
		loc[pta] := l1,
    ;

    continuous =        
		(*------------------------------------------------------------*)
		(* Initial clock constraints *)
		(*------------------------------------------------------------*)
		& x				= 0
		& global_time	= 0
	;
}

(************************************************************)
(* The end *)
(************************************************************)
end
