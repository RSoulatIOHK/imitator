var

(* Clocks *)
 	x,
 	global_time, (*** NOTE: special keyword ***)
		: clock;

 	d1,
		: discrete;

 	p,
		: parameter;


(************************************************************)
  automaton pta
(************************************************************)
synclabs: a;

loc l1: invariant x <= 3 & global_time >= 0
	when x = 3 sync a do {x := 0} goto l2;

loc l2: invariant x <= 1
	when x = 1 sync a do {x := 0, d1 := d1 + 2} goto l3;

loc l3: invariant x <= 1
	when x = 1 & x > p sync a do {d1 := d1 / 2} goto l4;

(*** NOTE: reachable iff p < 1 ***)
loc l4: invariant x <= 8
	when x = 8 sync a goto lbad;

loc lbad: invariant True

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0
	& global_time = 0

	(*------------------------------------------------------------*)
	(* Initial discrete *)
	(*------------------------------------------------------------*)
	& d1 = 1/2
	
	(*------------------------------------------------------------*)
	(* Initial parameter valuations *)
	(*------------------------------------------------------------*)
	& p >= 0
;


(************************************************************)
(* The end *)
(************************************************************)
end
