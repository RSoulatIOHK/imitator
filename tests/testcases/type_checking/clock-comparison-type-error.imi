var 
    x,
        : clock;
    b,
    	: bool;

(************************************************************)
 automaton pta
(************************************************************)
 
loc l1: invariant True 
	when x = b goto lend;
	
accepting loc lend: invariant True
 end (* pta *)
(************************************************************)


(************************************************************)
(* Initial state *)
(************************************************************)


init := {

    discrete = 
        loc[pta] := l1,
    ;
    continuous = 
        & x >= 0
    ;
    
}



(************************************************************)
(* The end *)
(************************************************************)
end
