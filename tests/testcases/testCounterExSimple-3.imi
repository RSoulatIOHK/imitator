var

(* Clocks *)
 	x,
 	global_time, (*** NOTE: special keyword ***)
		: clock;

 	p,
		: parameter;


(************************************************************)
  automaton pta
(************************************************************)
synclabs: a;

loc l1: invariant x <= 3 & global_time >= 0
	when x = 3 & x = p + 2.5 sync a do {x := 0} goto ltarget;

loc ltarget: invariant x <= 1

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0
	& global_time = 0

	(*------------------------------------------------------------*)
	(* Initial parameter valuations *)
	(*------------------------------------------------------------*)
	& p >= 0
;



(************************************************************)
(* The end *)
(************************************************************)
end
