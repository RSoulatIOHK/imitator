var

  i, j, k, l, m : discrete;
  x, y, z, w, v : clock;

(************************************************************)
 automaton pta1
(************************************************************)
synclabs : a;

loc l1: invariant x <= 0
	when
    & True
  do {
    let
    	  i := 1; (* i = 1 *)
        i := i + 1; (* i = 2 *)
        j := i; (* j = i = 2 *)
        l := 1; (* l = 1 *)
        m := 1;
    in
      v := m, (* m = 1 in pta1, then m = 2 in pta2, so v = 2 *)
    	x := j, (* x = j = i = 2*)
      w := l, (* l = 1 in pta1, then l = 2 in pta2, so w = 2 *)
      (* m := 1 *)
    end
  }
  sync a
  goto lend;


accepting loc lend: invariant True
 end (* pta *)
(************************************************************)

(************************************************************)
 automaton pta2
(************************************************************)
synclabs : a;
loc l1: invariant True
	when
    & True
  do {
    let
    	k := 2*i; (* k = 2 * i = 2 * 2 = 4 *)
      l := 2;
      m := 2;
    in
    	y := k, (* y = 4 *)
      z := x, (* z = x = 0, because x is initialized to 0 *)
      (* m := 2 *)
    end
  }
  sync a
  goto lend;


accepting loc lend: invariant True
 end (* pta *)
(************************************************************)


(************************************************************)
(* Initial state *)
(************************************************************)

init :=
      loc[pta1] = l1
      & loc[pta2] = l1
      & x >= 0
      & y >= 0
      & z >= 0
      & w >= 0
;


(************************************************************)
(* The end *)
(************************************************************)
end
