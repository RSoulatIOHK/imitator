var 	x, y
		: clock;
	a, b
		: parameter;


(*****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--*****************************************************)


(******************************************************)
  automaton aa
(******************************************************)
synclabs: ;

loc l1: invariant x <= b 
	when a <= x do {x := 0} goto l1;
	when 2 <= y do {} goto l2;

loc l2: invariant True 
end (* aa *)



(******************************************************)
(******************************************************)
(* ANALYSIS *)
(******************************************************)
(******************************************************)

init :=
	(*----------------------
	-- Initial locations
	----------------------*)
	  loc[aa] = l1

	(*----------------------
	-- Clocks
	----------------------*)
	& x = 0
	& y = 0
	
	(*----------------------
	-- Bounded parameters
	----------------------*)
	& 0 <= a & a <= 10 
	& 0 <= b & b <= 10 
;


