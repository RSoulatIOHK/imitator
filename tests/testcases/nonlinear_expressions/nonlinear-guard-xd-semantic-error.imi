var

(* Clocks *)
    x,
        : clock;
(* Discretes *)
    p1, i, j,
        : discrete;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: a1, a2;

loc l1: invariant True
    (* nonlinear arithmetic on XD, should lead to semantic error *)
    when p1 - x > i * i & p1 - x < j sync a1 goto l2;
    
loc l2: invariant True
    (* nonlinear arithmetic on D *)
    when i * i / 2 < j * j / 2 sync a2 goto lend;

accepting loc lend: invariant True

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1
	(*------------------------------------------------------------*)
	(* Discrete variables *)
	(*------------------------------------------------------------*)
	& x = 0
	& p1 = 5
	& i = 0
	& j = 10
;


(************************************************************)
(* The end *)
(************************************************************)
end
