var

(* Clocks *)
	x,
 	global_time,
		: clock;


(************************************************************)
  automaton pta
(************************************************************)
synclabs: ;

loc l1: invariant x <= 2
	when x = 2 do { x := 5} goto l2;

loc l2: invariant x <= 8 flow{ x' = 3}
	when x = 8 do { x := 2 * x} goto l3;

loc l3: invariant x >= 6 flow{ x' = -1}
	when x = 6 do { x := x - 3} goto lTarget;

urgent loc lTarget: invariant True

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x				= 0
	& global_time	= 0

;


(************************************************************)
(* The end *)
(************************************************************)
end
