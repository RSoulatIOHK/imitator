var

(* Clocks *)
 	x, y, z,
 	global_time,
		: clock;


(************************************************************)
  automaton spec1
(************************************************************)
synclabs: a1, a3;

loc l1: invariant x <= 8 stop{z}
	when x <= 4 sync a1 goto l2;

loc l2: invariant True stop{z}
	when True sync a3 goto lT;

loc lT: invariant True

end (* spec1 *)

(************************************************************)
  automaton spec2
(************************************************************)
synclabs: a2, a3;

loc l1: invariant True flow{x' = 1, y' = -0.25}
	when x >= 10 sync a2 goto l2;

loc l2: invariant True flow{x' = -1, y' = 1}
	when True sync a3 goto lT;

loc lT: invariant True

end (* spec2 *)


(************************************************************)
(* Initial state *)
(************************************************************)

init := {
	
    discrete =
		(*------------------------------------------------------------*)
		(* Initial location *)
		(*------------------------------------------------------------*)
		loc[spec1] := l1,
		loc[spec2] := l1,

    ;

    continuous =        
		(*------------------------------------------------------------*)
		(* Initial clock and signal constraints *)
		(*------------------------------------------------------------*)
		& global_time	= 0
		& x				= 0
		& y				= 1
		& 1 < z	& z < 2

		(*------------------------------------------------------------*)
		(* Parameter constraints *)
		(*------------------------------------------------------------*)
(* 		& p >= 0 *)
	;
}


(************************************************************)
(* The end *)
(************************************************************)
end
