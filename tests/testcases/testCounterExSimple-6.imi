var

(* Clocks *)
 	x,
 	global_time, (*** NOTE: special keyword ***)
		: clock;

 	p,
		: parameter;


(************************************************************)
  automaton pta
(************************************************************)
synclabs: a;

loc l1: invariant x <= 3 & global_time >= 0
	when p > 0 sync a goto l2;

loc l2: invariant x > 1
	when True sync a goto l3;

loc l3: invariant x > 1
	when True sync a do {x := 0 } goto ltarget;

loc ltarget: invariant x >= 0

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x > 1
	& global_time = 0

	(*------------------------------------------------------------*)
	(* Initial parameter valuations *)
	(*------------------------------------------------------------*)
	& p > 1
;


(************************************************************)
(* The end *)
(************************************************************)
end
